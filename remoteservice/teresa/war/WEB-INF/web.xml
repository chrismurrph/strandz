<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>

<web-app>

  <servlet>
    <servlet-name>kodoservice</servlet-name>
    <servlet-class>kodo.remote.PersistenceServerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>kodoservice</servlet-name>
    <url-pattern>/kodoservice/*</url-pattern>
  </servlet-mapping>
  
  <init-param>
    <param-name>kodo.properties</param-name>
    <param-value>kodo.properties</param-value>
  </init-param>
    
</web-app>